---
import "../styles/global.css";
import "../styles/auth-extra.css";

import MenuIsland from "../components/islands/MenuIsland.tsx";
import PermissoesProvider from "../components/islands/PermissoesProvider.tsx";
import { SYSTEM_NAME } from "../lib/systemName";

const { title = SYSTEM_NAME, activePage = "" } = Astro.props;
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#0f172a" />
    <title>{title}</title>
  </head>
  <body>
    <div class="app-shell">

      <!-- MENU DINÂMICO -->
      <PermissoesProvider client:only="react" />
      <MenuIsland client:only="react" {activePage} />

      <!-- CONTEÚDO -->
      <main class="app-main">
        <slot />
      </main>
    </div>
  </body>
</html>
