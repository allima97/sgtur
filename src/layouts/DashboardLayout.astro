---
import "../styles/global.css";
import "../styles/auth-extra.css";

import MenuIsland from "../components/islands/MenuIsland.tsx";
import PermissoesProvider from "../components/islands/PermissoesProvider.tsx";
import { SYSTEM_NAME } from "../lib/systemName";

const { title = SYSTEM_NAME, activePage = "" } = Astro.props;
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="theme-color" content="#0f172a" />
    <title>{title}</title>
    <style>
      /* Apply critical desktop layout only on wide screens to avoid forcing
         desktop styles on mobile during navigation. */
      @media (min-width: 1025px) {
        .app-shell{display:grid;grid-template-columns:260px 1fr;}
        .app-sidebar{display:flex;flex-direction:column;}
      }
    </style>
  </head>
  <body>
    <div class="app-shell">

      <!-- MENU DINÂMICO: render on server and hydrate on load to keep desktop layout stable -->
      <PermissoesProvider client:load />
      <MenuIsland client:load {activePage} />

      <!-- CONTEÚDO -->
      <main class="app-main">
        <slot />
      </main>
    </div>
  </body>
</html>
