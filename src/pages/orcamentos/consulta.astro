---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import HeaderPage from "../../components/ui/HeaderPage.astro";
import QuoteListIsland from "../../components/islands/QuoteListIsland.tsx";

const activePage = "orcamentos";
---

<DashboardLayout title="Consulta de Orcamentos" {activePage}>
  <HeaderPage
    title="Consulta de Orcamentos"
    subtitle="Listagem de orcamentos importados e confirmados."
    color="purple"
    stackActionsOnMobile={true}
  >
    <div>
      <a class="btn btn-primary" href="/orcamentos/importar">Importar orcamento</a>
      <a class="btn btn-light" href="/orcamentos/criar">Criar orcamento</a>
    </div>
  </HeaderPage>

  <QuoteListIsland client:load />
</DashboardLayout>
