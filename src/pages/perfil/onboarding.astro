---
import "../../styles/global.css";
import "../../styles/auth-extra.css";
import PerfilIsland from "../../components/islands/PerfilIsland.tsx";
import { SYSTEM_NAME } from "../../lib/systemName";

const pageTitle = `Completar cadastro - ${SYSTEM_NAME}`;
---

<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{pageTitle}</title>
    <style>
      .onboarding-body {
        justify-content: flex-start;
        padding: 32px 12px 56px;
        background: #0f172a;
      }

      .onboarding-shell {
        width: min(1200px, 100%);
        margin: 0 auto;
      }

      .onboarding-header {
        color: #e5e7eb;
        margin-bottom: 16px;
      }

      .onboarding-header h1 {
        margin: 0 0 6px;
        font-size: 1.6rem;
      }

      .onboarding-header p {
        margin: 0;
        color: #cbd5e1;
      }

      @media (max-width: 720px) {
        .onboarding-body {
          padding: 20px 12px 40px;
        }
      }
    </style>
  </head>
  <body class="auth-body onboarding-body">
    <div class="onboarding-shell">
      <header class="onboarding-header">
        <h1>Complete seu cadastro</h1>
        <p>Finalize seus dados para liberar o acesso ao sistema.</p>
      </header>
      <PerfilIsland client:visible />
    </div>
  </body>
</html>
