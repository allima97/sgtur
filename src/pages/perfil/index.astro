---
import "../../styles/global.css";
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import PerfilIsland from "../../components/islands/PerfilIsland.tsx";

const activePage = "perfil";
if (Astro.url.searchParams.get("onboarding") === "1") {
  return Astro.redirect("/perfil/onboarding");
}
---

<DashboardLayout title="Meu Perfil" {activePage}>
  <h1 class="page-title">Meu Perfil</h1>
  <p class="page-subtitle">Atualize seus dados pessoais e de acesso.</p>

  <PerfilIsland client:visible />
</DashboardLayout>
