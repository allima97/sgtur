---
const { title, subtitle = "", color = "blue", stackActionsOnMobile = false } = Astro.props;
const headerClass = `page-header ${color}-header${stackActionsOnMobile ? " page-header-stack" : ""}`;
---

<header class={headerClass}>
  <div>
    <h1>{title}</h1>
    {subtitle && <p>{subtitle}</p>}
  </div>
  <div class="page-header-actions">
    <slot />
  </div>
</header>
